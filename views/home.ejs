<%- include("partials/header") -%> 

    <div class="top-part">
        <h1 class="heading">Notes App</h1>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>

        <div class="form-wrapper">
            <form class=" form-container" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="noteTitle" placeholder="Title" autocomplete="off">
                </div>
                
                <div class="form-group">
                    <textarea class="form-control" name="noteBody" placeholder="Take a note. . ." rows="3"></textarea>
                </div>
                
                <button class=" btn" type="Submit">Save</button>
                
                
            </form>
        </div>

    </div>

    
        <h2>All notes</h2>
        <div class="notes-wrapper">

            <% notesList.reverse().forEach(note => { %>
                <div class="notes-container">
                    <h3><%= note.title %></h3>

                    <% if (note.content.length > 100) { %>
                        <p><%=note.content.substring(0,100) + ". . ." %><a href= "/notes/<%= note.title %>">read more</a></p>
                    <% } else { %>
                        <p><%= note.content %></p>
                   <% } %>
                    
                </div>
            <% }) %>
            
        </div>

<%- include("partials/footer") -%> 
    
